@article{lofwall_weekly_2018,
	title = {Weekly and {Monthly} {Subcutaneous} {Buprenorphine} {Depot} {Formulations} vs {Daily} {Sublingual} {Buprenorphine} {With} {Naloxone} for {Treatment} of {Opioid} {Use} {Disorder}: {A} {Randomized} {Clinical} {Trial}},
	volume = {178},
	issn = {2168-6106},
	shorttitle = {Weekly and {Monthly} {Subcutaneous} {Buprenorphine} {Depot} {Formulations} vs {Daily} {Sublingual} {Buprenorphine} {With} {Naloxone} for {Treatment} of {Opioid} {Use} {Disorder}},
