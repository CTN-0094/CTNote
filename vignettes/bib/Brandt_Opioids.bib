	number = {4},
	urldate = {2022-09-15},
	journal = {The American Journal on Addictions},
	author = {Biondi, Breanne E. and Zheng, Xiaoying and Frank, Cynthia A. and Petrakis, Ismene and Springer, Sandra A.},
	month = apr,
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ajad.13051},
	pages = {249--267},
	file = {Full Text PDF:/Users/gabrielodom/Zotero/storage/5QDAUYHS/Biondi et al. - 2020 - A Literature Review Examining Primary Outcomes of .pdf:application/pdf;Snapshot:/Users/gabrielodom/Zotero/storage/L9R276DL/ajad.html:text/html},
