@article{strang_extended-release_2019,
	title = {Extended-release naltrexone versus standard oral naltrexone versus placebo for opioid use disorder: the {NEAT} three-arm {RCT}},
	volume = {23},
	issn = {ISSN: 2046-4924, ISSN: 1366-5278},
	shorttitle = {Extended-release naltrexone versus standard oral naltrexone versus placebo for opioid use disorder},
